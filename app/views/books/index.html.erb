<h1 class=title1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th><th>Body</th>
		</tr>
	</thead>

  <% @books.each do |book| %>
    <tr>
     <div>
      <td><%= book.title %></td>
     </div>
     <div>
    	<td><%= book.body %></td>
     </div>
      <span>
      <td><%=link_to "Show" ,book_path(book.id) %></td>
      <td><%=link_to "Edit" ,edit_book_path(book.id) %></td>
      <td><%=link_to "Destroy" ,book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </span>
    </tr>
  <% end %>
</table>

<h1>New book</h1>
<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message+"error" %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>


  <div><%= f.submit 'Create Book' %></div>
<% end %>