<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message+"error" %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<div><%= f.submit 'Create Book' %></div>

<% end %>